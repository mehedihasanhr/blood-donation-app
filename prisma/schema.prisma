generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Division {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  slug     String     @unique
  en_name  String
  bn_name  String
  district District[]
  Donor    Donor[]
}

model District {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  en_name     String
  bn_name     String
  division    Division @relation(fields: [division_id], references: [id])
  division_id String   @db.ObjectId
  thana       Thana[]
  Donor       Donor[]
}

model Thana {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  slug        String       @unique
  en_name     String
  bn_name     String
  district    District     @relation(fields: [district_id], references: [id])
  district_id String       @db.ObjectId
  post_office PostOffice[]
  Donor       Donor[]
}

model PostOffice {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  slug        String  @unique
  en_name     String
  bn_name     String
  postal_code String?
  thana       Thana   @relation(fields: [thana_id], references: [id])
  thana_id    String  @db.ObjectId
}

model Donor {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  mobile              String   @unique
  date_of_birth       DateTime
  father_name         String
  mother_name         String
  profession          String
  organization_name   String
  division            Division @relation(fields: [division_id], references: [id])
  division_id         String   @db.ObjectId
  district            District @relation(fields: [district_id], references: [id])
  district_id         String   @db.ObjectId
  thana               Thana    @relation(fields: [thana_id], references: [id])
  thana_id            String   @db.ObjectId
  blood_type          String
  last_blood_donation DateTime
}
